{
  "parser": "babel-eslint",

  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module",
    "babelOptions": {
      "configFile": ""
    }
  },

  "env": {
    "es6": true,
    "node": true
  },

  "extends": [
    "eslint:recommended",
    "standard",
    "prettier",
    "prettier/react"
  ],

  "plugins": [
    "import",
    "node",
    "promise",
    "standard",
    "react"
  ],

  "globals": {
    "document": false,
    "navigator": false,
    "window": false,
    "Response": false,
    "fetch": false,
    "File": false,
    "Blob": false,
    "confirm": false
  },

  "rules": {
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "standard/array-bracket-even-spacing": ["error", "either"],
    "standard/computed-property-even-spacing": ["error", "even"],
    "standard/no-callback-literal": "error",
    "standard/object-curly-even-spacing": ["error", "either"],
    "no-unsafe-negation": "error"
  }
}
